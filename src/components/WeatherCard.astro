---
import type { WeatherData } from "../lib/weather";
import { weatherThemes } from "../lib/weatherThemes";

interface Props {
  weather: WeatherData;
}

const { weather } = Astro.props;
const theme = weatherThemes[weather.weather];
---

<div class="weather-card" data-weather={weather.weather}>
  <div class="location">{weather.location}</div>

  <div class="main-info">
    <svg
      class="weather-icon"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
    >
      <Fragment set:html={theme.icon} />
    </svg>
    <div class="temperature">{weather.temperature}Â°</div>
  </div>

  <div class="metrics-grid">
    <div class="metric-card">
      <div class="metric-header">
        <svg
          class="metric-icon"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"></path>
        </svg>
        <span class="metric-label">HUMEDAD</span>
      </div>
      <div class="metric-value">{weather.humidity}%</div>
    </div>

    <div class="metric-card">
      <div class="metric-header">
        <svg
          class="metric-icon"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            d="M9.59 4.59A2 2 0 1 1 11 8H2m10.59 11.41A2 2 0 1 0 14 16H2m15.73-8.27A2.5 2.5 0 1 1 19.5 12H2"
          ></path>
        </svg>
        <span class="metric-label">VIENTO</span>
      </div>
      <div class="metric-value">{weather.wind} km/h</div>
    </div>

    <div class="metric-card">
      <div class="metric-header">
        <svg
          class="metric-icon"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"></path>
        </svg>
        <span class="metric-label">LLUVIA</span>
      </div>
      <div class="metric-value">{weather.rain}%</div>
    </div>
  </div>
</div>

<style define:vars={{ iconColor: theme.iconColor }}>
  .weather-card {
    background: rgba(15, 23, 42, 0.8);
    border: 1px solid rgba(51, 65, 85, 0.5);
    border-radius: 24px;
    padding: 48px;
    max-width: 480px;
    width: 100%;
    backdrop-filter: blur(10px);
  }

  .weather-card[data-weather="Clear"] {
    background: rgba(254, 243, 199, 0.15);
    border: 1px solid rgba(251, 191, 36, 0.3);
  }

  .weather-card[data-weather="Snow"],
  .weather-card[data-weather="Sleet"],
  .weather-card[data-weather="Hail"] {
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(186, 230, 253, 0.4);
  }

  .weather-card[data-weather="Thunderstorm"] {
    background: rgba(30, 27, 75, 0.5);
    border: 1px solid rgba(139, 92, 246, 0.3);
  }

  .weather-card[data-weather="Cloudy"] {
    background: rgba(51, 65, 85, 0.6);
    border: 1px solid rgba(100, 116, 139, 0.4);
  }

  .weather-card[data-weather="Fog"] {
    background: rgba(107, 114, 128, 0.5);
    border: 1px solid rgba(156, 163, 175, 0.4);
  }

  .weather-card[data-weather="Haze"] {
    background: rgba(168, 162, 158, 0.4);
    border: 1px solid rgba(120, 113, 108, 0.4);
  }

  .weather-card[data-weather="Dust"] {
    background: rgba(217, 119, 6, 0.2);
    border: 1px solid rgba(180, 83, 9, 0.3);
  }

  .weather-card[data-weather="Shower"] {
    background: rgba(3, 105, 161, 0.4);
    border: 1px solid rgba(7, 89, 133, 0.4);
  }

  .weather-card[data-weather="Drizzle"] {
    background: rgba(51, 65, 85, 0.7);
    border: 1px solid rgba(71, 85, 105, 0.4);
  }

  .location {
    color: rgba(203, 213, 225, 0.9);
    font-size: 16px;
    font-weight: 500;
    text-align: center;
    margin-bottom: 32px;
    letter-spacing: 0.5px;
  }

  .weather-card[data-weather="Clear"] .location,
  .weather-card[data-weather="Snow"] .location,
  .weather-card[data-weather="Sleet"] .location,
  .weather-card[data-weather="Hail"] .location,
  .weather-card[data-weather="Dust"] .location {
    color: rgba(30, 41, 59, 0.9);
  }

  .main-info {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    margin-bottom: 16px;
  }

  .weather-icon {
    width: 80px;
    height: 80px;
    color: var(--iconColor);
  }

  .temperature {
    font-size: 96px;
    font-weight: 300;
    color: #ffffff;
    line-height: 1;
    letter-spacing: -2px;
  }

  .weather-card[data-weather="Clear"] .temperature,
  .weather-card[data-weather="Snow"] .temperature,
  .weather-card[data-weather="Sleet"] .temperature,
  .weather-card[data-weather="Hail"] .temperature,
  .weather-card[data-weather="Dust"] .temperature {
    color: rgba(15, 23, 42, 0.95);
  }

  .condition {
    text-align: center;
    color: rgba(203, 213, 225, 0.8);
    font-size: 15px;
    margin-bottom: 48px;
  }

  .weather-card[data-weather="Clear"] .condition,
  .weather-card[data-weather="Snow"] .condition,
  .weather-card[data-weather="Sleet"] .condition,
  .weather-card[data-weather="Hail"] .condition,
  .weather-card[data-weather="Dust"] .condition {
    color: rgba(30, 41, 59, 0.8);
  }

  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .metric-card {
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(51, 65, 85, 0.4);
    border-radius: 16px;
    padding: 20px;
  }

  .weather-card[data-weather="Clear"] .metric-card {
    background: rgba(254, 243, 199, 0.3);
    border: 1px solid rgba(251, 191, 36, 0.2);
  }

  .weather-card[data-weather="Snow"] .metric-card,
  .weather-card[data-weather="Sleet"] .metric-card,
  .weather-card[data-weather="Hail"] .metric-card {
    background: rgba(255, 255, 255, 0.3);
    border: 1px solid rgba(186, 230, 253, 0.3);
  }

  .weather-card[data-weather="Thunderstorm"] .metric-card {
    background: rgba(30, 27, 75, 0.4);
    border: 1px solid rgba(139, 92, 246, 0.2);
  }

  .weather-card[data-weather="Cloudy"] .metric-card {
    background: rgba(51, 65, 85, 0.5);
    border: 1px solid rgba(100, 116, 139, 0.3);
  }

  .weather-card[data-weather="Fog"] .metric-card {
    background: rgba(107, 114, 128, 0.4);
    border: 1px solid rgba(156, 163, 175, 0.3);
  }

  .weather-card[data-weather="Haze"] .metric-card {
    background: rgba(168, 162, 158, 0.3);
    border: 1px solid rgba(120, 113, 108, 0.3);
  }

  .weather-card[data-weather="Dust"] .metric-card {
    background: rgba(217, 119, 6, 0.3);
    border: 1px solid rgba(180, 83, 9, 0.2);
  }

  .weather-card[data-weather="Shower"] .metric-card {
    background: rgba(3, 105, 161, 0.3);
    border: 1px solid rgba(7, 89, 133, 0.3);
  }

  .weather-card[data-weather="Drizzle"] .metric-card {
    background: rgba(51, 65, 85, 0.6);
    border: 1px solid rgba(71, 85, 105, 0.3);
  }

  .metric-header {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 12px;
  }

  .metric-icon {
    width: 18px;
    height: 18px;
    color: rgba(148, 163, 184, 0.8);
  }

  .weather-card[data-weather="Clear"] .metric-icon,
  .weather-card[data-weather="Snow"] .metric-icon,
  .weather-card[data-weather="Sleet"] .metric-icon,
  .weather-card[data-weather="Hail"] .metric-icon,
  .weather-card[data-weather="Dust"] .metric-icon {
    color: rgba(71, 85, 105, 0.8);
  }

  .weather-card[data-weather="Shower"] .metric-icon {
    color: rgba(186, 230, 253, 0.8);
  }

  .metric-label {
    font-size: 11px;
    font-weight: 600;
    color: rgba(148, 163, 184, 0.8);
    letter-spacing: 0.8px;
    text-transform: uppercase;
  }

  .weather-card[data-weather="Clear"] .metric-label,
  .weather-card[data-weather="Snow"] .metric-label,
  .weather-card[data-weather="Sleet"] .metric-label,
  .weather-card[data-weather="Hail"] .metric-label,
  .weather-card[data-weather="Dust"] .metric-label {
    color: rgba(71, 85, 105, 0.8);
  }

  .weather-card[data-weather="Shower"] .metric-label {
    color: rgba(186, 230, 253, 0.85);
  }

  .metric-value {
    font-size: 28px;
    font-weight: 400;
    color: #ffffff;
    letter-spacing: -0.5px;
  }

  .weather-card[data-weather="Clear"] .metric-value,
  .weather-card[data-weather="Snow"] .metric-value,
  .weather-card[data-weather="Sleet"] .metric-value,
  .weather-card[data-weather="Hail"] .metric-value,
  .weather-card[data-weather="Dust"] .metric-value {
    color: rgba(15, 23, 42, 0.95);
  }

  @media (max-width: 600px) {
    .weather-card {
      padding: 32px 24px;
    }

    .temperature {
      font-size: 72px;
    }

    .weather-icon {
      width: 64px;
      height: 64px;
    }

    .metrics-grid {
      gap: 12px;
    }

    .metric-card {
      padding: 16px;
    }

    .metric-value {
      font-size: 24px;
    }
  }
</style>
